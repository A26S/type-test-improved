<section class="register">
    <div class="wrapper">
        <div class="main-content">
            <div class="main-left">
                <img class="main-image reg lights" src="https://i.ibb.co/xsknbfN/07.png" alt="Lightbulb illustration" border="0">
            </div>
            <div class="main-right registration">
                <h1 class="reg-heading">Get started with your account...</h1>
                <p class="main-para">Create an account to get in-depth reports and save your test progression</p>

                <%# Validations for creation of the user %>
                <% if @user.errors.full_messages.length > 0 %>

                    <ul>
                    
                        <% @user.errors.full_messages.each do |message| %>

                            <li>
                            
                                <%= message %>

                            </li>

                        <% end %>
                    
                    </ul>

                <% end %>

                <%= form_for @user do |f| %>

                    <%= f.label :first_name %>
                    <%= f.text_field :first_name %>

                    <%= f.label :last_name %>
                    <%= f.text_field :last_name %>

                    <%= f.label :age %>
                    <%= f.number_field :age %>

                    <%= f.label :username %>
                    <%= f.text_field :username %>

                    <%= f.label :password %>
                    <%= f.password_field :password %>

                    <div class="reg-submit">
                        <%= f.submit 'Create Account', :class => "btn" %>
                        <p>..already registered? <%= link_to "log in", login_path %></p>
                    </div>

                <% end %>
            </div>
        </div>
    </div>
</section>